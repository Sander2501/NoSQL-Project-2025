@model NoSQL_Project.ViewModels.CreateTicketViewModel

@{
    ViewData["Title"] = "Create New Ticket";
}

<div class="container mt-4">
    <h1>Create New Ticket</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label asp-for="Subject" class="form-label">Subject *</label>
                    <input asp-for="Subject" class="form-control" placeholder="Brief description of the issue" required />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description *</label>
                    <textarea asp-for="Description" class="form-control" rows="5"
                              placeholder="Provide detailed information about the incident" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Priority" class="form-label">Priority</label>
                        <select asp-for="Priority" class="form-select">
                            <option value="Low">Low</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="High">High</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Type" class="form-label">Type</label>
                        <select asp-for="Type" class="form-select">
                            <option value="General" selected>General</option>
                            <option value="IT">IT</option>
                            <option value="Facilities">Facilities</option>
                            <option value="HR">HR</option>
                            <option value="Finance">Finance</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="OwnerId" class="form-label">Reporter *</label>
                    <select asp-for="OwnerId" class="form-select" required>
                        <option value="">-- Select Employee --</option>
                        @if (ViewBag.Employees != null)
                        {
                            @foreach (var emp in ViewBag.Employees)
                            {
                                <option value="@emp.Id">@emp.FullName (@emp.Email)</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="OwnerId" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Note: In production, this would automatically use the logged-in user
                    </small>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Create Ticket</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Tips for Reporting Issues</h5>
                    <ul class="small">
                        <li>Be specific and descriptive in your subject</li>
                        <li>Include all relevant details in the description</li>
                        <li>Select the appropriate priority level</li>
                        <li>Choose the correct type for faster resolution</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}