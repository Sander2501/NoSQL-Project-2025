@model NoSQL_Project.ViewModels.DeleteTicketViewModel

@{
    ViewData["Title"] = "Delete Ticket";
}

<h2>Delete Ticket</h2>

<h4>Are you sure you want to delete this ticket?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.Subject</dd>
        <dt class="col-sm-2">Owner ID</dt>
        <dd class="col-sm-10">@Model.OwnerId</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
