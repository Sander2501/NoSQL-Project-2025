@model NoSQL_Project.ViewModels.CreateEmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-4">
    <h1>Create New Employee</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" required minlength="6" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">Minimum 6 characters</small>
                </div>

                <div class="mb-3">
                    <label asp-for="RoleId" class="form-label"></label>
                    <select asp-for="RoleId" class="form-select" required>
                        <option value="Employee" selected>Employee</option>
                        <option value="ServiceDesk">Service Desk</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="+31 6 12345678" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Create Employee</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}